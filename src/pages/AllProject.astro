---
import Layout from '@/layouts/Layout.astro'
import ProjectCard from '@/components/ui/ProjectCard.astro'
import  {Projets}  from "@/data/cv";
//
---

<Layout>

	<section class="py-2 border-b">
		<div class="flex max-md:flex-col justify-between transition-all duration-300">
			<h2 class="text-3xl font-bold mb-8">Projets Réalisés</h2>

		{/*btn search................. */}
			<div class='join shadow-gray-500 ms-0 max-md:ms-9 transition-all duration-300'>
				<label class="input input-md flex items-center justify-start  join-item w-full ">
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search-icon lucide-search"><path d="m21 21-4.34-4.34"/><circle cx="11" cy="11" r="8"/></svg>
					<input type="search" class="grow ps-1 w-full "  placeholder="recherche ..." />
					
				</label>
				
			</div>
				


		</div>
		<div class="flex justify-center items-center left-0 right-0 top-0 bottom-0 w-full">
			<div class="py-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-9 px-6 items-center">
				{Projets?Projets.map((proj) => <ProjectCard {...proj} />):
				<div>non tr</div>
				}
				

			</div>
		</div>
	</section>
</Layout>
