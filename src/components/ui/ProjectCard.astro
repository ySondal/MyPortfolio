---
//dark:bg-white
//group ...

interface Props {
  imageSrc: string;
  title: string;
  description: string;
  techIcons: {
    title: string;
    path: string;
  }[];

}

const { imageSrc, title, description, techIcons = []} = Astro.props;
---

<div class=" group ...  ">
  <div class=" bg-base-200  rounded-2xl z-0 shadow-md
  group-hover:shadow-zinc-600  shadow-xl/30 group-hover:shadow-lg  group-hover:z-50
  transition-all ease-out duration-200 cursor-pointer">
    <!-- Image projet -->
    <div class="w-full h-56 relative p-1 ">
      <img 
        src={imageSrc} 
        alt={`Image pour ${title}`} 
        class="w-full h-full rounded-t-2xl object-cover  "
        loading="lazy"
      />
    </div>

    <!-- Texte -->
    <div class="p-4 flex flex-col gap-2">
      <h2 class="text-xl font-semibold">{title}</h2>
      <p class="text-gray-600">{description}</p>

      <!-- IcÃ´nes des technologies -->
      <div class="flex flex-wrap gap-2 mt-2 ">
        {techIcons.map((icon) => (
          <div class="group relative flex flex-wrap items-center" title={icon.title}>
            <svg xmlns={icon.path} width="38" height="38" viewBox="0 0 24 24"><path fill="currentColor" d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10s-4.477 10-10 10m4-14h-1.35v4H16zM9.346 9.71l6.059 7.828l1.054-.809L9.683 8H8v7.997h1.346z"/></svg>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>
